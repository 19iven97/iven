#include<iostream>
using namespace std;
const int SIZE = 5;
struct stack {
	int top;
	int arr[SIZE];
};
int isFull(stack s) {
	if (s.top == SIZE - 1)
		return 1;
	else
		return 0;
}
void push(stack &s,int &n) 
{
	if (isFull(s))
		cout << "stack is full\n";
	else 
	{
		s.arr[++s.top] = n;
	}
}
int isEmpty(stack s) {
	if (s.top = -1)
		return 1;
	else
		return 0;
}
int pop(stack &s) 
{
	if (isEmpty(s))
		cout << "stack is empty.\n";
	else
		return s.arr[s.top--];
}
void print(stack s) 
{
	if (isEmpty(s))
		cout << "nothing to print!\n";
	else
		for (int i = s.top; i >= 0; i--) {
			cout << s.arr[s.top];		
		}
}
int main() {
	stack st;
	st.top=-1;
	int choice, total, x;
	cout << "1- to push\n2- to pop\n3- to print\n4- to exit\nmake your choice:    ";
	cin >> choice;
	while (choice != 4) {
		if (choice == 1) {
			cout << "how many elements to push:    ";
			cin >> total;
			for (int i = 0; i < total; i++) {
				cin >> x;
				push(st,x);			
			}		
		}
		if (choice == 2) {
			cout << "how many elements to pop:    ";
			cin >> total;
			for (int i = 0; i < total; i++) {
				pop(st);
			}
		}
		if (choice == 3) {
			print(st);
		}
		cout << "make another choice:   ";
		cin >> choice;
	
	}
	
	return 0;
}
